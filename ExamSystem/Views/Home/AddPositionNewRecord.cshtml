@model LiveExam.BAL.PositionModel

@if (Request.IsAuthenticated)
{
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <style>
        .container2 {
            background: linear-gradient(to bottom,#b0c8e0 0%,#fff 25%);
            border-radius: 10px;
        }
    </style>
    <br />
    <div>
        <button type="button" class="btn">
            <i class="fa fa-home" aria-hidden="true">
                @Html.ActionLink("Home", "Index", null, new { style = "text-decoration:none;" })
            </i>
        </button>
        <a style="margin-top:5px;" class="pull-right " href="@Url.Action("GetAllPosData", "Home", null)">
            <img src="~/Content/Images/back_icon.png" style="vertical-align: middle; width: 30px; " />
        </a>
    </div>
    <br />
    <div class="container bg-info img-rounded">
        <div class="card text-center">
            <h2 class="card-title">Add Position</h2>
        </div>
    </div>
    <div class="container container2 ">
        <br />
        @using (Html.BeginForm("AddPositionNewRecord", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @*<span><b>Select Technology::&nbsp;&nbsp;&nbsp;</b></span>@Html.DropDownListFor(model => model.TechnologyId, new SelectList(Model.TechList, "Id", "TechnologyName"), "Select Technology Name")*@

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Select Technology", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.TechnologyId, new SelectList(Model.TechList, "Id", "TechnologyName"), "Select Technology Name", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TechnologyId, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NAME, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TIMEMINUTES, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TIMEMINUTES, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TIMEMINUTES, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ISACTIVE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ISACTIVE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ISACTIVE, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <input type="submit" value="Save" class="btn btn-default btn-success" />
                        @*<button type="button" class="btn btn-default pull-right">
                            @Html.ActionLink("Back to List", "GetAllPosData", null, new { style = "text-decoration:none;" })
                        </button>*@
                    </div>
                </div>
            </div>
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
