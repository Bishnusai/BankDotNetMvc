@model LiveExam.BAL.PosQueJoinModel


@if (Request.IsAuthenticated)
{
    <style>
        .container2 {
            background: linear-gradient(to bottom,#b0c8e0 0%,#fff 25%);
            border-radius: 10px;
        }
    </style>
    <br />
    <div>
        <button type="button" class="btn">
            <i class="fa fa-home" aria-hidden="true">
                @Html.ActionLink("Home", "Index", null, new { style = "text-decoration:none;" })
            </i>
        </button>
        @{
            string urlId = Convert.ToString(Model.PositionID);

            <a style="margin-top:5px;" class="pull-right " href="@Url.Action("GetAllPosQuesJoinCat/"+urlId, "Home", null)">
                <img src="~/Content/Images/back_icon.png" style="vertical-align: middle; width: 30px; " />
            </a>
        }
    </div>
    <br />
    <div class="container bg-info img-rounded">
        <div class="card text-center">
            <h2 class="card-title">Edit Position and Quserion Join Dept.</h2>
        </div>
    </div>
    <div class="container container2 ">
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.PositionID)
                @Html.HiddenFor(model => model.QueCatID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Position.NAME, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <span>@Model.Position.NAME</span><br />
                        @Html.ValidationMessageFor(model => model.Position.NAME, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.QuestionCategory.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <span>@Model.QuestionCategory.Name</span>
                        @Html.ValidationMessageFor(model => model.QuestionCategory.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NoOfQuestion, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NoOfQuestion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoOfQuestion, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <input type="submit" value="Save" class="btn btn-default" />
                        @*<button type="button" class="btn btn-default pull-right ">
                            @{
                                string urlId = Convert.ToString(Model.PositionID);

                                @Html.ActionLink("Back to List", "GetAllPosQuesJoinCat/" + urlId, null, new { style = "text-decoration:none;" })
                            }
                        </button>*@
                    </div>
                </div>
            </div>
        }
    </div>
}
