@model IEnumerable<LiveExam.BAL.QuestionCategoryModel>

@if (Request.IsAuthenticated)
{
    <button type="button" class="btn navbar-btn ">
        <i class="fa fa-backward " aria-hidden="true">
            @Html.ActionLink("Back", "Index", null, new { style = "text-decoration:none;" })
        </i>
    </button>
    <table class="table table-bordered table-striped table-hover" id="allQueCat">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeMinutes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @(item.TimeMinutes != null && item.TimeMinutes.Value == 0 ? item.TimeMinutes : 0)
                    </td>
                    <td>

                        @(item.IsActive != null ? "Yes" : "No")
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
<script src="../../Scripts/jquery-3.3.1.min.js"></script>

<script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />

<script>
    $(document).ready(function () {
        //console.log($('#lstCandidate').length)
        $('#allQueCat').DataTable();
    })
</script>

