@model LiveExam.BAL.CollegeModel

@if (Request.IsAuthenticated)
{
    <style>
        .container2 {
            background: linear-gradient(to bottom,#b0c8e0 0%,#fff 25%);
        }
    </style>
    <br />
    <div>
        <button type="button" class="btn">
            <i class="fa fa-home" aria-hidden="true">
                @Html.ActionLink("Home", "Index", null, new { style = "text-decoration:none;" })
            </i>
        </button>
        <a style="margin-top:5px;" class="pull-right " href="@Url.Action("GetAllCollegeRecords", "Home", null)">
            <img src="~/Content/Images/back_icon.png" style="vertical-align: middle; width: 30px; " />
        </a>
    </div>
    <br />
    <div class="container bg-info img-rounded">
        <div class="card text-center">
            <h2 class="card-title">College Details</h2>
        </div>
    </div>
    <div class="container container2 fa-border">
        <br />
        <dl class="dl-horizontal ">
            <dt>
                @Html.DisplayNameFor(model => model.CollegeName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CollegeName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.University)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.University)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @(Model.IsActive != null && Model.IsActive.Value ? "Yes" : "No")
            </dd>

        </dl>

        <div style="margin-left:50px">
            <button type="button" class="btn btn-default">
                @Html.ActionLink("Edit", "EditCollege", new { id = Model.Id }, new { style = "text-decoration:none;" })
            </button>
            @*&nbsp; &nbsp;&nbsp;
            <button type="button" class="btn btn-default">
                @Html.ActionLink("Back to List", "GetAllCollegeRecords", null, new { style = "text-decoration:none;" })
            </button>*@
        </div>
        <br />
    </div>

}
