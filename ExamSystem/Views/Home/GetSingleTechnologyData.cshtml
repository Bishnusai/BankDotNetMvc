@model LiveExam.BAL.TechnologyModel

@if (Request.IsAuthenticated)
{
    <style>
        .container2 {
            background: linear-gradient(to bottom,#b0c8e0 0%,#fff 25%);
        }
    </style>
    <br />
    <div>
        <button type="button" class="btn">
            <i class="fa fa-home" aria-hidden="true">
                @Html.ActionLink("Home", "Index", null, new { style = "text-decoration:none;" })
            </i>
        </button>
        <a style="margin-top:5px;" class="pull-right " href="@Url.Action("GetAllTechnologyData", "Home", null)">
            <img src="~/Content/Images/back_icon.png" style="vertical-align: middle; width: 30px; " />
        </a>
    </div>
    <br />
    <div class="container bg-info img-rounded">
        <div class="card text-center">
            <h2 class="card-title">Technology Details</h2>
        </div>
    </div>
    <div class="container container2 fa-border">
        <br />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TechnologyName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TechnologyName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @*@Html.DisplayFor(model => model.IsActive)*@
                @(Model.IsActive != null && Model.IsActive.Value ? "Yes" : "No")
            </dd>

        </dl>

        <div style="margin-left:30px">
            <button type="button" class="btn btn-default">
                @Html.ActionLink("Edit", "EditTechnology", new { id = Model.Id }, new { style = "text-decoration:none;" })
            </button>
           
        </div>
        <br />
    </div>
}
